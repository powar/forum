<div  class="jumbotron">
<h1>Add Question </h1>
 
<%= bootstrap_form_for(@forum.questions.build) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
    <%= f.text_field :name %>
  </div>
 

  <div class="field">
   
  <input type="hidden" name="question[forum_id]" value="<%= @forum.id %>" />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</br>

<div class="jumbotron">
<h1>Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
     
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= link_to 'Show', question , class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_question_path(question) ,class:" btn btn-success" %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
     <% end %>
 
  </tbody>
</table>






<%= link_to 'Back', forums_path ,class:" btn btn-info"%>

</div>
