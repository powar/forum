<p id="notice"><%= notice %></p>

<h1>Available Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post ,class:"btn btn-info"%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


