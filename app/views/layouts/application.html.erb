<!DOCTYPE html>
<html>
<head>
<script src="jquery-1.11.3.min.js"></script>
  <title>Shree</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<p id="notice"><%= notice %></p>

		<nav class="navbar navbar-inverse">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="#">Forum</a>
		    </div>

  <% if current_user %>
  
 <div>
 <ul class="nav navbar-nav pull-right">
 <li class="email"><%= current_user.email %></p>
<li  class="active"><%= link_to "Log Out", logout_path %></li> 
</ul>
<% else %>
		    <div>
 <ul class="nav navbar-nav pull-right">
<li  class="active"><%= link_to "Sign Up", signup_path %> </li> 
<li><%= link_to "Log In", login_path %></li>
</ul>
<% end %>
</div>
 </div>
</nav>
  
<% flash.each do |key, value| %>
<%= content_tag(:div, class: "alert alert-#{key}") do %>
<p><%= value %></p>
<% end %>
<% end %>
<br>

<div class = "container" style = "padding-top:20px;">
         <%= yield %>
   </div>

 <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>


<script>
$(document).ready(function(){
  $('#login').click(function(){
  if ($('#email').val() == "" &&  $('#password').val() == ""){
   alert('Input can not be left blank').addclass('warning');
}
})
});
</script>

<div id="Footer">Forum@jadeglobal.com</div>

</body>
</html>
